//CLA local functions
int foo(int a, int b)
{
    if(a < b)
    {
        return 0x11111111;
    }
    if(a > b)
    {
        return 0x22222222;
    }
    if(a == b)
    {
        return 0x33333333;
    }

    return 0xBAADBAAD;
}

int bar(float a, float b)
{
    if(a < b)
    {
    return 0x11111111;
    }
    if(a > b)
    {
    return 0x22222222;
    }
    if(a == b)
    {
    return 0x33333333;
    }

    return 0xBAADBAAD;
}

void tau(int *a, int *b)
{
    int tmp;
    if(*a < *b)
    {
    tmp = *a;
    *a = *b;
    *b = tmp;
    return;
    }
    else if(*a > *b)
    {
    *b += (*a - *b);
    return;
    }
    else if(*a == *b)
    {
    return;
    }
    //it should never hit this point
    *a = 0xBAADBAAD; *b = 0xBAADBAAD;
    return;
}

